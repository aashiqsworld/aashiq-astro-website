---
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "Aashiq Shaikh";
import BlogCard from '../components/BlogCard.astro';

const allProjects = await Astro.glob('../pages/posts/*.mdx');

const featuredPosts = ["vss", "ray-tracer-cpu", "aivrit", "coordinate"]
---

