				  <path fill="none" stroke="#000000" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10"  d="M7.0614,42.4369c0,5.5959,3.8094,10.1241,8.5171,10.1241"/>
				  <path fill="none" stroke="#000000" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10"  d="M45.2619,21.2377c0-2.5663-1.747-4.6428-3.9059-4.6428"/>
				  <path fill="none" stroke="#000000" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10"  d="M49.8731,21.6727c0-5.5959-3.8094-10.1241-8.5171-10.1241"/>
