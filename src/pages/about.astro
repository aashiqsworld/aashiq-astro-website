---
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "About Aashiq";
import Footer from '../components/Footer.astro';
---

<BaseLayout pageTitle={pageTitle}>
	<div class="text-lg font-light">
		<div class="text-center my-8">
			pronounced AH-shik
		</div>
		<div class="text-center my-8">
			I currently reside in Arizona. 
		</div>
		<div class="text-center mt-8">
			You can contact me below: 
		</div>
	</div>

<div class="grid place-items-center">
	
	<form name="contact-form" method="POST" data-netlify="true">
		<div class="mt-4">
		  <input type="text" name="Name" class="
		  mt-1
		  block
		  rounded-md
		  bg-gray-100
		  border-transparent
		  transition
		  focus:border-gray-200 focus:bg-white focus:ring-0
		" id="name" placeholder="Name" required>
		</div>
		<div class="mt-4">
		  <input type="email" name="Email" class="
		  mt-1
		  block
		  rounded-md
		  bg-gray-100
		  border-transparent
		  transition
		  focus:border-gray-200 focus:bg-white focus:ring-0
		" id="email" placeholder="Email" required>
		</div>
		<div class="mt-4">
		  <textarea id="message" name="Message" class="
		  mt-1
		  block
		  rounded-md
		  bg-gray-100
		  border-transparent
		  transition
		  focus:border-gray-200 focus:bg-white focus:ring-0
		" placeholder="Message" rows="3" required></textarea>
		</div>
		<div class="mt-5">
		  <button type="submit" class="rounded-md bg-stone-200 p-2" >Send Message</button>
		</div>
	  </form>
	  <br>
</div>
</BaseLayout>
<Footer/>
