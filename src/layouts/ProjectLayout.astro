---
// import '../styles/global.css'
import BaseLayout from '../layouts/BaseLayout.astro';

const { frontmatter } = Astro.props;
const pageTitle = "Aashiq's Projects";

---

<BaseLayout pageTitle={pageTitle}>
	<div class="">
		<img class="w-full object-cover aspect-[3/1] bg-center mb-2 rounded-2xl" src={frontmatter.image.url} alt={frontmatter.image.alt}>
		<div class="text-lg inline-block opacity-50">
			{frontmatter.title}
		</div>
		<div class="text-xl">
			{frontmatter.subtitle}
		</div>
		<div class="mt-2">
			{frontmatter.links != null ? frontmatter.links.map((link) => <a class="mr-2 underline text-gray-300  underline-offset-4 hover:underline-offset-1" target="_blank" rel="noopener noreferrer" href={link.url}>{link.name} <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="inline w-4 h-4 stroke-2 -translate-y-0.5">
				<path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
			</svg></a>) : null}
		</div>
	</div >
		<!-- <hr> -->
		<br>
	<div class="whitespace-pre-line ">
		<slot/>
	</div>
	
</BaseLayout>